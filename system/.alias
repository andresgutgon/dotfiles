# Global aliases

alias ls="ls --color=always"
alias ll="ls -lA --color=always"
alias grep="grep --color=always"
alias egrep="egrep --color=always"

# Vim alias
if [ -h '/opt/homebrew/bin/vim' ]; then
  alias vim='/opt/homebrew/bin/vim'
fi

# Docker Volume inspecting
# ::::::::::::::::::::::::

# Mount a new small container for inspecting Docker volumes
# Because content of Docker volumes are not in your machine are inside
# Docker's host VM

# More info:
# https://www.freshblurbs.com/blog/2017/04/16/inspect-docker-volumes-on-mac.html

# How to use it:
# First your run:
# docker volume ls
# Then you pick the volume you want to inspect
# docker volume inspect MY_VOLUME
# Then you pick the `Mountpoint` path and use this alias:
# dm-disk ls -l /docker/MOUNT_POINT_PATH
alias dm-disk='docker run --rm -it -v /:/docker alpine:edge $@'

# Git
alias gp="git pull"
alias gps="git push"
alias gs="git status"
alias ga="git add"
alias gd="git diff"
alias gw="git wip"

# Network
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ipl="ifconfig | grep -Eo 'inet (addr:)?([0-9]*\.){3}[0-9]*' | grep -Eo '([0-9]*\.){3}[0-9]*' | grep -v '127.0.0.1'"


fixssh() {
  for key in SSH_AUTH_SOCK SSH_CONNECTION SSH_CLIENT; do
    if (tmux show-environment | grep "^${key}" > /dev/null); then
      value=`tmux show-environment | grep "^${key}" | sed -e "s/^[A-Z_]*=//"`
      export ${key}="${value}"
    fi
  done
}
